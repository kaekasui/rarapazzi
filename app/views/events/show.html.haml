%p#notice= notice

%p
  %b Brand:
  = @event.brand_id
%p
  %b Latitude:
  = @event.latitude
%p
  %b Longitude:
  = @event.longitude
%p
  %b Address:
  = @event.address
%p
  %b Description:
  = @event.description
%p
  %b Title:
  = @event.title
%p
  %b Datetime:
  = @event.datetime
  - @event.photos.each do |photo|
    = link_to photo.link do
      = image_tag photo.image_url, class: " img-thumbnail"

